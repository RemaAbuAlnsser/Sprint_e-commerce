        <main className="flex-1">
          <div className="container mx-auto px-4 py-16 text-center">
            <div className="text-gray-600">ط¬ط§ط±ظٹ ط§ظ„طھط­ظ…ظٹظ„...</div>
          </div>
        </main>
        <Footer />
      </div>
    }>
      <SearchContent />
    </Suspense>
  )
